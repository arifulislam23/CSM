@using CSM.DataModels;
@model IEnumerable<Employe>

@{
    ViewData["Title"] = "Shipper List";
    Layout = "_Layout";
}
<br />
<div class="card-header d-flex justify-content-between">
    <div>
        <i class="fas fa-table me-1"></i>
        All Shipper List
    </div>
    <div class="form-group bg-info">
        <form asp-controller="EmployeMangment" asp-action="Index" method="get" class="input-group input-group-lg">
            <input type="search" value="@ViewBag.searchInput" class="form-control form-control-md" name="searchInput" placeholder="Search..">
            <div class="input-group-append">
                <button type="submit" class="btn btn-lg btn-default" id="searchButton">
                    <i class="fa fa-search"></i>
                </button>
            </div>
        </form>
    </div>
</div>
<hr />
<div class="row justify-content-center">
    <div class="col-md-12">
        <div class="card card-info">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.EmployeId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Phone)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Address)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>Action<//th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmployeId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Phone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.EmployeId">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.EmployeId">Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <partial name="_pagination" />
</div>
