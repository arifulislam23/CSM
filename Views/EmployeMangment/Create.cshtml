@using CSM.DataModels;
@model Employe
@{
  
    ViewData["Title"] = "Create New Employee";
    Layout = "_Layout";
}

<br />
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card card-info">
            <div class="card-header">
                Appoint New Shipper
            </div>
            <form role="form" asp-action="Create" asp-controller="EmployeMangment" enctype="multipart/form-data" method="post">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="control-label">Name:</label>
                        <input asp-for="Name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Address:</label>
                        <input asp-for="Address" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label  class="control-label">Phone:</label>
                        <input asp-for="Phone" type="number" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Email:</label>
                        <input asp-for="Email" type="email" class="form-control" />
                    </div><br />
                </div>
                <div class="card-footer">
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>





@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
