@model CSM.DataModels.Employe

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<div class="row justify-content-center">
    <div class="col-md-8">
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-danger">
                @TempData["Message"]
            </div>
        }
        <div class="card card-info">
            <div class="card-header">
                Update Shipper Information
            </div>
            <form role="form" asp-action="Edit" asp-controller="EmployeMangment" enctype="multipart/form-data" method="post">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="control-label">Name:</label>
                        <input asp-for="Name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Address:</label>
                        <input asp-for="Address" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Phone:</label>
                        <input asp-for="Phone" type="number" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Email:</label>
                        <input asp-for="Email" class="form-control" />
                    </div><br />
                </div>
                <input asp-for="EmployeId" hidden />
                <div class="card-footer">
                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
