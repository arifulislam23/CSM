@using CSM.ViewModels;
@model TrackingVM
@{
    Layout = "_HomeLayout";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<div class="track-product">
    <h2 class="common-heading">Shipment <span>Tracking</span></h2>

    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <p class="text-danger">@ViewBag.ErrorMessage</p>
    }
    else
    {
        <p>Track your parcel</p>
    }
    <div class="home-track-inner">
        <form method="post" id="trackForm" asp-action="Index">
            <input type="text" name="tracking_item" placeholder="Type your tracking number"
                   class="form-control">
            <button type="submit" class="common-btn">
                <i class="icon-search"></i> <span>
                    TRACK
                    PARCEL
                </span>
            </button>
        </form>
    </div>
</div>
<br />
@if (Model != null)
{
    <div class="track-product">
        <div class="home-track-inner">
            <div id="parcelInfo" class="parcel-info">
                <table class="table table-bordered">
                    <tr>
                        <th>Tracking Number</th>
                        <th>Status</th>
                        <th>Delivery Date</th>
                        <th>Shipper Name</th>
                        <th>Shipper Phone Number</th>
                    </tr>
                    <tr>
                        <td>@Model.TrackNumber</td>
                        <td>@Model.Status</td>
                        <td>@Model.DeliveryDate</td>
                        <td>@Model.ShipperName</td>
                        <td>@Model.ShipperPhone</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
}
